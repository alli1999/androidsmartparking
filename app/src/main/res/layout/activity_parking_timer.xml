<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingTimer"
    android:background="#ff3d7f">

    <TextView
        android:id="@+id/parkingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking started"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/slottext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/parkingtext"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/timericon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/slottext"
        android:src="@drawable/parktimericon"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timericon">

        <Button
            android:id="@+id/done"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="50dp"
            android:text="Done parking"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"/>

    </RelativeLayout>
</RelativeLayout>